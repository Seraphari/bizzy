          <div class="card-body sector-card">
            <h5 class="card-title"><%= founder.company_name %></h5>
          </div>
          <div class="card-bottom">
            <a href= <%= founder_path(founder) %> class="btn btn-primary">Know more</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

