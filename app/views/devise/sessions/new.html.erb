<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-5 p-0">
     <%= image_tag('sign-in-banner.jpg', class: 'img-sign-in') %>
      <div class="col-md-4 text-on-image">
        <h1>Hello &#128075;</h1>
        <p>Join Singapore's startup ecosystem and grow your business today &#128640;</p>
        <a class="btn btn-flat" href="#">Sign Up</a>
      </div>
    </div>

<%# <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);"> %>

    <div class="col-xs-12 col-md-7">
      <div class="form-login">
      <div class="container-signup">
          <div class="row"><h2>Welcome back!</h2></div>
          <div class="row"><p class="subtitle">Please sign in to continue.</p></div>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", placeholder: "sample@gmail.com" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", placeholder: "Enter your password (case-sensitive)" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class:"btn btn-sm"%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
