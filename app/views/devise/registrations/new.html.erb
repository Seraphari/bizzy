<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-5 p-0">
      <%= image_tag('sign-up-banner.jpg', class: 'img-sign-up') %>
      <div class="text-on-image">
        <h1>Bizzy</h1>
        <p>Where dreams come alive.</p>
      </div>
    </div>



    <div class="col-xs-12 col-md-7">
      <div class="form-login">
        <div class="container-signup">
          <div class="row"><h2>Sign up on Bizzy</h2></div>
          <div class="row"><p class="subtitle">Already have an account?&nbsp&nbsp<%= render "devise/shared/links" %></p></div>
        </div>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
              <div class="form-inputs">
                <div class="row">
                  <div class="col-6">
                    <%= f.input :first_name,
                                required: true,
                                autofocus: true,
                                input_html: { autocomplete: "email", placeholder: "Tim" }%>
                  </div>
                  <div class="col-6">
                    <%= f.input :last_name,
                                required: true,
                                autofocus: true,
                                input_html: { autocomplete: "email", placeholder: "Cook" }%>
                  </div>
                </div>
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email", placeholder: "sample@gmail.com" }%>
                <%= f.input :password,
                            required: true,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password", placeholder: "Tip: Do not use simple passwords" } %>
                <%= f.input :password_confirmation,
                            required: true,
                            input_html: { autocomplete: "new-password", placeholder: "Re-enter your password (case-sensitive)" } %>
              </div>
                <div class="form-actions">
                  <%= f.button :submit, "Sign up", class: 'btn btn-sm' %>
                </div>
                <% end %>
                <%# <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>
