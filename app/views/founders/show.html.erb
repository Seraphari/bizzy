<div class="container">
  <div class="row">
    <%# SHOW ON @FOUNDER %>
    <% if @founder != current_user.founder %>
      <p>Current_connection between you and <%= @founder.user.first_name %>:</p>
        <% if current_user.founder.following?(@founder)%>
          <%= button_to "Unfollow", unfollow_path(@founder) %>
        <% elsif current_user.founder.sent_follow_request_to?(@founder) %>
          <%= button_to "Cancel follow request", cancel_path(@founder) %>
        <% else %>
          <%= button_to "Follow", follow_path(@founder) %>
        <% end %>
    <% end %>

    <%# SHOW ON CURRENT_USER.FOUNDER %>
    <% if current_user.founder %>
      <% current_user.founder.follow_requests.each do |request| %>
        <%= request.followerable.user.email %> wants to follow you
        <%= button_to "Accept", accept_path(request.followerable) %>
        <%= button_to "Decline", decline_path(request.followerable) %>
      <% end %>
    <% end %>
  </div>
</div>

<%# PLEASE DONT REMOVE THIS LINE %>
<% if @founder.user == current_user %>
  <div class="main-container">
    <div class="row">
      <div class="col-md-4 founder" data-controller="favorite">
        <%# <div class="cards-founders"> %>
        <h3><strong>Founder's Name: </strong><%= @founder.user.first_name %> <%= @founder.user.last_name %></h3>
        <h3><strong>Company:</strong> <%= @founder.company_name %></h3><br>
        <p><strong>Description:</strong> <%= @founder.company_description %></p>

        <div class="d-flex flex-column">
          <p><strong>Company Email:</strong> <%= @founder.company_email %></p>
          <p><strong>Company UEN: </strong> <%= @founder.company_UEN %></p>
          <p><strong>Company Funding Stage:</strong> <%= @founder.funding_stage %></p>
          <p><strong>Company Date Incorporated:</strong> <%= @founder.date_incorporated %></p>
        </div><hr>

        <p><strong><%= @founder.user.first_name%>'s followers:</strong></p>
          <% current_user.founder.followers.each do |founder| %>
          <p><%= link_to founder.user.email, founder_path(founder) %> <%= button_to "Unfollow this user", unfollow_path(founder) %></p>
          <% end %>
        <h3><strong>My Favourites (Investors)</strong></h3>
          <ul data-favorite-target="savelist">
            <% current_user.all_favorited.each do |favorite| %>
              <p><%= link_to favorite.company_name, investor_path(favorite) %></p>
            <p><%= link_to "Chat", investor_chatrooms_path(favorite.id) %></p>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
<% end %>
